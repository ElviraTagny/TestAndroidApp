<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.natixis_dev.test">

    <uses-sdk android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".Database.MessageContentProvider"
            android:authorities="com.example.natixis_dev.test.contentprovider" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TextToSpeechActivity" />
        <activity android:name=".SpeechToTextActivity" />
        <activity android:name=".WebviewActivity" />
        <activity
            android:name=".MessageActivity"
            android:label="@string/title_activity_message"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.natixis_dev.test.MainActivity" />
        </activity>
        <activity
            android:name=".ChatBotActivity"
            android:label="@string/title_activity_chat_bot"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PhotoVideoActivity" />
        <activity android:name=".Utils.TopActivity"></activity>
    </application>

</manifest>