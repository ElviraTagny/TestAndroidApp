<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/profilePicture"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/dydu"/>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profilePicture"
        android:id="@+id/bullemessage"
        android:background="@drawable/bulle_background_white"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textmessage"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datemessage"
            android:layout_below="@id/textmessage"
            android:layout_alignRight="@id/textmessage"
            android:textSize="12dp"
            android:textColor="@color/dark_gray"
            android:paddingTop="5dp"/>
    </RelativeLayout>
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/bullemessage"
        android:layout_alignParentTop="true"
        android:background="@drawable/speaker2"
        android:layout_marginLeft="5dp"
        android:id="@+id/btnRead"/>

</RelativeLayout>