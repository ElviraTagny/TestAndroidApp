<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.natixis_dev.test.SendMessageActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dest_label"
        android:layout_margin="@dimen/content_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/destLabel"
        android:padding="10dp"
        android:gravity="center"/>

    <EditText
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/destLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin"
        android:layout_marginRight="@dimen/content_margin"
        android:layout_marginBottom="10dp"
        android:id="@+id/inputDest"/>

    <EditText
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/content_margin"
        android:layout_marginRight="@dimen/content_margin"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/inputDest"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/message"
        android:gravity="start"
        android:overScrollMode="ifContentScrolls"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_marginBottom="@dimen/content_margin"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/sendBtn"
        android:text="@string/send_button"/>

</android.support.constraint.ConstraintLayout>
